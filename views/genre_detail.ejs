<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("partials/head"); %>
  </head>
  <body class="container-fluid">
    <div class="row">
      <div class="col-sm-2">
        <header><%- include("partials/sidebar"); %></header>
      </div>
      <div class="col-sm-10">
        <h1>Genre: <%= genre.name %></h1>
        <div style="margin-left: 20px; margin-top: 20px">
          <h4>Books</h4>
          <% if (genre_books.length > 0) { %>

          <dl>
            <% for (let i = 0; i < genre_books.length; i++) { %>
            <dt>
              <a href="<%= genre_books[i].url %>"
                ><%- genre_books[i].title %></a
              >
            </dt>
            <dd><%- genre_books[i].summary %></dd>
            <% } %>
          </dl>
          <% } else { %>
          <p>This genre has no books</p>
          <% } %>
        </div>
        <hr />
        <p><a href="<%- genre.url + '/delete' %>">Delete genre</a></p>
        <p><a href="<%- genre.url + '/update' %>">Update genre</a></p>
      </div>
    </div>
  </body>
</html>
