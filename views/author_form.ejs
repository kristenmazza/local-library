<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("partials/head"); %>
  </head>
  <body class="container-fluid">
    <div class="row">
      <div class="col-sm-2">
        <header><%- include("partials/sidebar"); %></header>
      </div>
      <div class="col-sm-10">
        <h1><%= title %></h1>
        <form method="post" action="">
          <div class="form-group">
            <% const fr_name = typeof author === 'undefined' ? '' :
            author.first_name %> <% const fm_name = typeof author ===
            'undefined' ? '' : author.family_name %>
            <label for="first_name">First Name: </label>
            <input
              id="first_name"
              class="form-control"
              type="text"
              placeholder="First Name"
              name="first_name"
              required="true"
              value="<%= fr_name %>"
            />
            <label for="family_name">Family Name: </label>
            <input
              id="family_name"
              class="form-control"
              type="text"
              placeholder="Family Name (surname)"
              name="family_name"
              required="true"
              value="<%= fm_name %>"
            />
          </div>
          <div class="form-group">
            <% const birth = (typeof author === 'undefined' || typeof
            author.date_of_birth === 'undefined') ? '' :
            author.date_of_birth_yyyy_mm_dd %> <% const death = (typeof author
            === 'undefined' || typeof author.date_of_death === 'undefined') ? ''
            : author.date_of_death_yyyy_mm_dd %>
            <label for="date_of_birth">Date of birth: </label>
            <input
              id="date_of_birth"
              class="form-control"
              type="date"
              placeholder="dd/mm/yyyy"
              name="date_of_birth"
              value="<%= birth %>"
            />
            <label for="date_of_death">Date of death: </label>
            <input
              id="date_of_death"
              class="form-control"
              type="date"
              placeholder="dd/mm/yyyy"
              name="date_of_death"
              value="<%= death %>"
            />
          </div>
          <button class="btn btn-primary" type="submit">Submit</button>
        </form>
        <% if (typeof errors !== 'undefined') { %>
        <ul>
          <% for (var i = 0; i < errors.length; i++) { %>
          <li class="text-danger"><%- errors[i].msg %></li>
          <% } %>
        </ul>
        <% } %>
      </div>
    </div>
  </body>
</html>
