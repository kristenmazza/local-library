<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("partials/head"); %>
  </head>
  <body class="container-fluid">
    <div class="row">
      <div class="col-sm-2">
        <header><%- include("partials/sidebar"); %></header>
      </div>
      <div class="col-sm-10">
        <h1><%= title %></h1>
        <form method="POST" action="">
          <div class="form-group">
            <label for="name">Genre:</label>
            <% if (typeof genre === 'undefined') { %>
            <input
              name="name"
              type="text"
              placeholder="Fantasy, Poetry, etc."
              id="name"
              class="form-control"
              required="true"
            />
            <% } else { %>
            <input
              name="name"
              type="text"
              placeholder="Fantasy, Poetry, etc."
              id="name"
              class="form-control"
              value="<%= genre.name %>"
              required="true"
            />
            <% } %>
          </div>
          <button class="btn btn-primary" type="submit">Submit</button>
        </form>
        <% if (typeof errors !== 'undefined') { %>
        <ul>
          <% for (let i = 0; i < errors.length; i++) { %>
          <li><%- errors[i].msg %></li>
          <% } %>
        </ul>
        <% } %>
      </div>
    </div>
  </body>
</html>
